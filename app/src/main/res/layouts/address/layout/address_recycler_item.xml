<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/address_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:id="@+id/receiver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/receiver"
        android:textSize="18sp"
        android:textColor="@color/dark"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_delete"
        android:id="@+id/button_edit"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        app:backgroundTint="#FFFFFF"
        android:textColor="@color/dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_baseline_edit_24"
        android:gravity="center"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>
    <Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/button_delete"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        app:backgroundTint="#FFFFFF"
        android:textColor="@color/dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_baseline_delete_outline_24"
        android:gravity="center"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>
    <TextView
        android:id="@+id/receiver_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/receiver_name"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/receiver_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/receiver_phone_number"
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/receiver_address"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/receiver_phone_number"
        android:background="@color/dark"
        />
</androidx.constraintlayout.widget.ConstraintLayout>