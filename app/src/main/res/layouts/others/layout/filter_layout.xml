<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="50dp"
    android:background="@color/light"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@color/white"
            android:padding="8dp"
            android:text="@string/filter"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <ImageView
            android:id="@+id/btnReset"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:onClick="onClickReset"
            android:paddingRight="16dp"
            app:srcCompat="@drawable/ic_baseline_refresh_24"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/btnConfirm"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:onClick="onClickConfirm"
            android:paddingRight="16dp"
            app:srcCompat="@drawable/ic_baseline_check_24_others"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctlRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llTitle"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="8dp"
            android:text="@string/rating"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <LinearLayout
            android:id="@+id/linearLayoutFirstRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <ToggleButton
                android:id="@+id/btnFiveStar"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_state"
                android:textColor="@color/black"
                android:textOff="5"
                android:textOn="5" />

            <ToggleButton
                android:id="@+id/btnFourStar"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_state"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textOff="Upper 4"
                android:textOn="Upper 4"></ToggleButton>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutSecondRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutFirstRow">

            <ToggleButton
                android:id="@+id/btnThreeStar"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_state"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textOff="Upper 3"
                android:textOn="Upper 3">

            </ToggleButton>

            <ToggleButton
                android:id="@+id/btnTwoStar"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_state"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textOff="Upper 2"
                android:textOn="Upper 2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnFourStar" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutThirdRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutSecondRow">

            <ToggleButton
                android:id="@+id/btnOneStar"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_state"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textOff="Upper 1"
                android:textOn="Upper 1">

            </ToggleButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:enabled="false"
                android:text="Upper 2"
                android:textAllCaps="false"
                android:visibility="invisible" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ctlRating"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/price"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>
        .0

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtMinPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/search_bg"
                android:gravity="center_horizontal"
                android:hint="Min"
                android:inputType="number"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="18dp"></com.google.android.material.textfield.TextInputEditText>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtMaxPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/search_bg"
                android:gravity="center_horizontal"
                android:hint="Max"
                android:inputType="number"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="18dp"></com.google.android.material.textfield.TextInputEditText>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>