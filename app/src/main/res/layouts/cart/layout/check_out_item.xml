<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/corner_radius">

    <ImageView
        android:id="@+id/imageView_product_checkOut"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_product_checkOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_product_checkOut"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_info_checkOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=""
        android:textColor="@color/gray1"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView_product_checkOut"
        app:layout_constraintTop_toBottomOf="@+id/textView_product_checkOut" />

    <TextView
        android:id="@+id/textView_cost_checkOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text=""
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_product_checkOut"
        app:layout_constraintStart_toStartOf="@+id/textView_product_checkOut" />

    <TextView
        android:id="@+id/textView_quantity_checkOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/gray1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_product_checkOut"
        app:layout_constraintEnd_toEndOf="@+id/textView_product_checkOut" />

</androidx.constraintlayout.widget.ConstraintLayout>