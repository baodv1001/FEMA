<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".views.ProfileActivity">

    <RelativeLayout
        android:id="@+id/header_profile_title"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        app:backgroundTint="@color/white"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="20dp"
            android:text="@string/brand_names"
            android:textColor="@color/dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/back_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:drawableStart="@drawable/ic_outline_arrow_back_24"
            android:drawableLeft="@drawable/ic_outline_arrow_back_24"
            android:gravity="start|center"
            android:onClick="onClickBack"
            android:text="@string/profile_button"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:onClick="onClickBack"/>
        <Button
            android:id="@+id/button_saved"
            android:layout_height="wrap_content"
            android:layout_width="40dp"
            app:backgroundTint="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:drawableLeft="@drawable/ic_baseline_check_24"
            android:layout_alignParentRight="true"
            android:onClick="onClickBack"
            android:layout_alignParentEnd="true"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="119dp"
            android:background="@color/light" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/userInfo_layout"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        app:layout_constraintTop_toBottomOf="@id/header_profile_title">

        <ImageView
            android:id="@+id/imageView_user"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="13dp"
            android:text="@string/name"
            android:textColor="@color/dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="33dp"
            android:text="@string/username"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        app:layout_constraintTop_toBottomOf="@id/userInfo_layout">

        <TextView
            android:id="@+id/name_icon"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:drawableStart="@drawable/ic_outline_person_outline_24"
            android:drawableLeft="@drawable/ic_outline_person_outline_24"
            android:layout_marginLeft="18dp"
            android:gravity="center"/>
        <TextView
            android:layout_height="match_parent"
            android:text="@string/name"
            android:layout_width="wrap_content"
            android:textColor="@color/dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="61dp"
            android:gravity="center"
            android:layout_marginStart="61dp" />
        <TextView
            android:id="@+id/text_name_bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/name"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:layout_marginRight="62dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            app:drawableRightCompat="@drawable/ic_baseline_arrow_forward_ios_27" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/gender_layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        app:layout_constraintTop_toBottomOf="@id/name_layout">
        <TextView
            android:id="@+id/gender_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:drawableStart="@drawable/ic_outline_male_27"
            android:drawableLeft="@drawable/ic_outline_male_27"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="61dp"
            android:layout_marginLeft="61dp"
            android:gravity="center"
            android:text="@string/gender"
            android:textColor="@color/dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_gender"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="62dp"
            android:gravity="center"
            android:text="@string/male"
            android:textColor="@color/gray"
            android:gravity="center"
            android:layout_marginRight="62dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            app:drawableRightCompat="@drawable/ic_baseline_arrow_forward_ios_27" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/birthday_layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        app:layout_constraintTop_toBottomOf="@id/gender_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:drawableStart="@drawable/ic_outline_date_range_27"
            android:drawableLeft="@drawable/ic_outline_date_range_27"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="61dp"
            android:layout_marginLeft="61dp"
            android:gravity="center"
            android:text="@string/birthday"
            android:textColor="@color/dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_birthday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="62dp"
            android:gravity="center"
            android:text="@string/user_birthday"
            android:textColor="@color/gray"
            android:gravity="center"
            android:layout_marginRight="62dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            app:drawableRightCompat="@drawable/ic_baseline_arrow_forward_ios_27" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/email_layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        app:layout_constraintTop_toBottomOf="@id/birthday_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:drawableStart="@drawable/ic_outline_email_27"
            android:drawableLeft="@drawable/ic_outline_email_27"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="61dp"
            android:layout_marginLeft="61dp"
            android:gravity="center"
            android:text="@string/email"
            android:textColor="@color/dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_user_email"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="62dp"
            android:gravity="center"
            android:text="@string/user_email"
            android:textColor="@color/gray"
            android:gravity="center"
            android:layout_marginRight="62dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            app:drawableRightCompat="@drawable/ic_baseline_arrow_forward_ios_27" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phone_number_layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        app:layout_constraintTop_toBottomOf="@id/email_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:drawableStart="@drawable/ic_outline_phone_android_27"
            android:drawableLeft="@drawable/ic_outline_phone_android_27"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="61dp"
            android:layout_marginLeft="61dp"
            android:gravity="center"
            android:text="@string/phone_number"
            android:textColor="@color/dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="62dp"
            android:gravity="center"
            android:text="@string/user_phone_number"
            android:textColor="@color/gray"
            android:gravity="center"
            android:layout_marginRight="62dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            app:drawableRightCompat="@drawable/ic_baseline_arrow_forward_ios_27" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/change_password_layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        app:layout_constraintTop_toBottomOf="@id/phone_number_layout">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:drawableStart="@drawable/ic_baseline_vpn_key_24"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:layout_marginLeft="18dp"
            android:gravity="center"/>
        <TextView
            android:layout_height="match_parent"
            android:text="Change Password"
            android:layout_width="wrap_content"
            android:textColor="@color/dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="61dp"
            android:gravity="center"
            android:layout_marginStart="61dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            app:drawableRightCompat="@drawable/ic_baseline_arrow_forward_ios_27" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@id/control_layout">
        <Button
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:onClick="onClickLogOut"
            android:text="@string/logout"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:backgroundTint="@color/primary"
            android:textColor="@color/dark"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            style="@style/Widget.MaterialComponents.Button"/>
    </RelativeLayout>

