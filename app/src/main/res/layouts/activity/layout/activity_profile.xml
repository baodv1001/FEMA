    <RelativeLayout
        android:id="@+id/phone_number_layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        app:layout_constraintTop_toBottomOf="@id/birthday_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:drawableStart="@drawable/ic_outline_phone_android_27"
            android:drawableLeft="@drawable/ic_outline_phone_android_27"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="61dp"
            android:layout_marginLeft="61dp"
            android:gravity="center"
            android:text="@string/phone_number"
            android:textColor="@color/dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="62dp"
            android:gravity="center"
            android:text="@string/user_phone_number"
            android:textColor="@color/gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            app:drawableRightCompat="@drawable/ic_baseline_arrow_forward_ios_27" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/change_password_layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        app:layout_constraintTop_toBottomOf="@id/phone_number_layout">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:drawableStart="@drawable/ic_baseline_vpn_key_24"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:layout_marginLeft="18dp"
            android:gravity="center"/>
        <TextView
            android:layout_height="match_parent"
            android:text="@string/change_pass_profile"
            android:layout_width="wrap_content"
            android:textColor="@color/dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="61dp"
            android:gravity="center"
            android:layout_marginStart="61dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            app:drawableRightCompat="@drawable/ic_baseline_arrow_forward_ios_27" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:onClick="onClickLogOut"
            android:text="@string/logout"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:backgroundTint="@color/primary"
            android:textColor="@color/dark"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            style="@style/Widget.MaterialComponents.Button"/>
        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:max="100"
            tools:progress="40" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>