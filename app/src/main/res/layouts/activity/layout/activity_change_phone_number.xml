<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ChangePhoneNumberActivity"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/button_back"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            app:backgroundTint="#FFFFFF"
            android:textColor="@color/dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_outline_arrow_back_24"
            android:gravity="start|center"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:onClick="onClickBack"/>
        <TextView
            android:layout_height="match_parent"
            android:text="@string/new_phone"
            android:layout_width="wrap_content"
            android:textColor="@color/dark"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:layout_marginStart="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/button_back"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark"
            app:layout_constraintBottom_toBottomOf="parent"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_new_phone_number"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tfPhoneNumber"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_new_phone"
            app:boxStrokeColor="@color/black"
            android:textColorHint="@color/gray"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_Phone_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:maxLength="150"
                android:maxLines="1"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_OTP"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/layout_new_phone_number"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tfOTP"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="OTP"
            app:boxStrokeColor="@color/black"
            android:textColorHint="@color/gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="left"
            android:layout_marginLeft="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_OTP"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:maxLength="10"
                android:maxLines="1"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/button_Send"
            android:layout_height="match_parent"
            android:layout_width="150dp"
            app:backgroundTint="#FFFFFF"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/get_code"
            android:gravity="center"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/primary"
            android:layout_marginRight="10dp"/>
        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/button_reSend"
            android:layout_height="match_parent"
            android:layout_width="150dp"
            app:backgroundTint="#FFFFFF"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/re_code"
            android:gravity="center"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/primary"
            android:visibility="invisible"
            android:layout_marginRight="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="16dp">
        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/button_choose"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:backgroundTint="#FFFFFF"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/choose"
            android:gravity="center"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/primary"
            android:enabled="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>