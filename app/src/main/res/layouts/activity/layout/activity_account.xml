<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".views.AccountActivity">

    <RelativeLayout
        android:id="@+id/header_account_title"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        app:backgroundTint="@color/white"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="20dp"
            android:text="@string/brand_names"
            android:textColor="@color/dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="78dp"
            android:text="@string/account"
            android:textColor="@color/dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="119dp"
            android:background="@color/light" />
    </RelativeLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/header_account_title">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="63dp" >
            <Button
                android:id="@+id/button_profile"
                android:layout_weight="1"
                app:backgroundTint="#FFFFFF"
                android:text="@string/profile_button"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_outline_person_outline_24"
                android:gravity="start|center"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:drawableStart="@drawable/ic_outline_person_outline_24" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="63dp">
            <Button
                android:id="@+id/button_order"
                android:layout_weight="1"
                app:backgroundTint="#FFFFFF"
                android:text="@string/order_button"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_outline_shopping_bag_24"
                android:gravity="start|center"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:drawableStart="@drawable/ic_outline_shopping_bag_24" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="63dp">

            <Button
                android:id="@+id/button_address"
                android:layout_weight="1"
                app:backgroundTint="#FFFFFF"
                android:text="@string/address_button"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_outline_location_on_24"
                android:gravity="start|center"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:drawableStart="@drawable/ic_outline_location_on_24" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="63dp">

            <Button
                android:id="@+id/buttonLanguage"
                android:layout_weight="1"
                app:backgroundTint="#FFFFFF"
                android:text="@string/changeLang"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_outline_location_on_24"
                android:gravity="start|center"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:drawableStart="@drawable/ic_outline_location_on_24" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="63dp"/>
    </TableLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnvMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/white"
        app:itemIconTint="@color/selector"
        app:itemTextColor="@color/selector"
        app:menu="@menu/menu_navigation"
        app:layout_constraintBottom_toBottomOf="parent">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>